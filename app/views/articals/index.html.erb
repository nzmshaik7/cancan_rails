<p id="notice"><%= notice %></p>

<h1>Articals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articals.each do |artical| %>
      <tr>
        <td><%= artical.name %></td>
        <td><%= artical.user.email %></td>
        <td><%= link_to 'Show', artical %></td>

        <%if can? :update, artical%>

          <td><%= link_to 'Edit', edit_artical_path(artical) %></td>
        <%end%>
        <% if can? :manage, artical %>
          <td><%= link_to 'Destroy', artical, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artical', new_artical_path %>
